@inherits RazorFunction
@using Composite.Core.WebClient.Renderings.Page

@functions {
	public override string FunctionDescription
	{
		get { return "The Microsoft® Translator webpage widget allows you to bring real-time, in-place translations to your web site."; }
	}
	[FunctionParameter(Label = "Background Color", Help = "Widget background color. By default is '#555'", DefaultValue = "#555")]
	public string BackgroundColor { get; set; }

	[FunctionParameter(Label = "Color", Help = "Widget color. By default is '#fff'", DefaultValue = "#fff")]
	public string Color { get; set; }
}

@{
	if (PageRenderer.RenderingReason == RenderingReason.ScreenshotGeneration)
	{
		return;
	}
}
